<h1>authorize someone <%= ' to view ' + link_to_name(@authorization.target) if @authorization.target %></h1>

<% form_for(@authorization) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.select :user_id, User.map_name_and_id %>
  </p>
  <% unless @authorization.target %>
	  <p>
	    <%= f.select :target_type, Authorization.targets(:select) %>
	  </p>
	  <p>
	    <%= f.label :target_id %>
	    <%= f.text_field :target_id %>
	  </p>
  <% else %>
	  <%= f.hidden_field :target_type %>
	  <%= f.hidden_field :target_id %>
  <% end %>  

  
  <p>
    <%= f.submit "save" %>
  </p>
<% end %>

<%= back_link %>
