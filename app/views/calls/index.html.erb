<h1>calls</h1>

<table>
  <tr>
    <th>Time</th>
    <th>Target</th>
    <th>Status</th>

  </tr>

<% for call in @calls %>
  <tr>
    <td><%=h call.time.strftime("%I:%M %p %A %m/%d") %></td>
    <td><%= link_to_name call.target %></td>
    <td><%=h call.status %></td>

    <td><%= link_to 'show', call %></td>
  </tr>
<% end %>
</table>

<br />

