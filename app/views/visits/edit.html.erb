<h1>Editing visit</h1>

<% form_for(@visit) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :earliest_time, 'earliest' %><br />
    <%= f.datetime_select :earliest_time %>
  </p>
  <p>
    <%= f.label :latest_time, 'latest' %><br />
    <%= f.datetime_select :latest_time %>
  </p>
  <p>
    <%= f.label :target_type %><br />
    <%= f.text_field :target_type %>
  </p>
  <p>
    <%= f.label :target_id %><br />
    <%= f.text_field :target_id %>
  </p>
  
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'show', @visit %> |
<%= back_link %>
