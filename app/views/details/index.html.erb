<h1>Listing details</h1>

<table>
  <tr>
    <th>Content</th>
    <th>Target type</th>
    <th>Target</th>
    <th>Creator</th>
  </tr>

<% for detail in @details %>
  <tr>
    <td><%=h detail.content %></td>
    <td><%=h detail.target_type %></td>
    <td><%=h detail.target_id %></td>
    <td><%=h detail.creator_id %></td>
    <td><%= link_to 'Show', detail %></td>
    <td><%= link_to 'Edit', edit_detail_path(detail) %></td>
    <td><%= link_to 'Destroy', detail, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

