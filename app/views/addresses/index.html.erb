<h1>addresses</h1>

<table>
  <tr>
    <th>Street number</th>
    <th>Street</th>
    <th>Line2</th>
    <th>Zip</th>

  </tr>

<% for address in @addresses %>
  <tr>
    <td><%=h address.street_number %></td>
    <td><%= link_to_name address.street %></td>
    <td><%=h address.line2 %></td>
    <td><%= link_to_name address.zip %></td>

    <td><%= link_to 'show', address %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New address', new_address_path %>
