<h1>New address</h1>

<% form_for(@address) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :street_number %><br />
    <%= f.text_field :street_number %>
  </p>
  <p>
    <%= f.label :street_id %><br />
    <%= f.select :street_id, Street.map_name_and_id %>
  </p>
  <p>
    <%= f.label :line2 %><br />
    <%= f.text_field :line2 %>
  </p>
  <p>
    <%= f.label :zip_id %><br />
    <%= f.select :zip_id, Zip.map_name_and_id %>
  </p>
  
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= back_link %>
