<h1>people</h1>

<table>
  <tr>
    <th>First name</th>
    <th>Middle name</th>
    <th>Last name</th>
    <th>User</th>
  </tr>

<% for person in @people %>
  <tr>
    <td><%=h person.first_name %></td>
    <td><%=h person.middle_name %></td>
    <td><%=h person.last_name %></td>
    <td><%= link_to_name person.user %></td>
    <td><%= link_to 'show', person %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New person', new_person_path %>
