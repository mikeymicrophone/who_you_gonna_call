<h1>you got a phone number - use it wisely</h1>

<% form_for(@phone) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :area_code, 'area code' %>
    <%= f.text_field :area_code, :size => 4 %>
    <%= f.text_field :number, :size => 8 %><%= f.label :number, 'number' %>
  </p>
  <p>
    <%= f.label :country_code, 'country code' %>
    <%= f.text_field :country_code, :size => 4 %>(USA is 1)
  </p>
  <p>
    <%= f.text_field :name, :size => 20 %><%= f.label :name, 'optional name' %>
  </p>
  <p>
    <%= f.submit "save" %>
  </p>
<% end %>

<%= back_link %>
