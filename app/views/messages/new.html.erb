<h1>New message</h1>

<% form_for(@message) do |f| %>
  <%= f.error_messages %>

	<p>
		<%= f.label :person_id %>
		<%= f.select :person_id, Person.map_name_and_id %>
	</p>
  <p>
    <%= f.label :time %><br />
    <%= f.datetime_select :time %>
  </p>
  <p>
    <%= f.label :service_id %><br />
    <%= f.select :service_id, Service.map_name_and_id %>
  </p>
  <p>
    <%= f.label :status %><br />
    <%= f.text_field :status %>
  </p>
  
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= back_link %>
